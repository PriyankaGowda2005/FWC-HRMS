# Production Environment Variables Template for Render Deployment
# Copy this to .env.production and update values as needed

# Application Configuration
NODE_ENV=production
APP_NAME=FWC HRMS
APP_VERSION=1.0.0

# Server Configuration
PORT=3001

# Database Configuration (MongoDB Atlas)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/fwc_hrms?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://fwc-hrms-frontend.onrender.com
BACKEND_URL=https://fwc-hrms-backend.onrender.com

# ML Service Configuration
ML_SERVICE_URL=https://fwc-hrms-ml.onrender.com
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration (Render Redis)
REDIS_URL=redis://username:password@host:port

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM=FWC HRMS <noreply@fwchrms.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Services Configuration
AI_SERVICE_URL=https://fwc-hrms-ml.onrender.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
