{
  "name": "@fwc-hrms/backend",
  "version": "1.0.0",
  "description": "FWC HRMS Backend API",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "node src/scripts/init-db.js",
    "db:seed": "node -e \"require('./src/seeds/seedData.js').seedData().then(() => process.exit(0)).catch(() => process.exit(1))\""
  },
  "dependencies": {
    "@types/multer": "^1.4.11",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "bullmq": "^5.61.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "multer": "^1.4.4",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.10",
    "resend": "^6.1.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/seeds/**",
      "!src/server.js"
    ]
  }
}
