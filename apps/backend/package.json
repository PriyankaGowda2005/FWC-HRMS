{
  "name": "@fwc-hrms/backend",
  "version": "1.0.0",
  "description": "FWC HRMS Backend API",
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PriyankaGowda2005/FWC-HRMS.git"
  },
  "homepage": "https://github.com/PriyankaGowda2005/FWC-HRMS#readme",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "node src/scripts/init-db.js",
    "db:seed": "node -e \"require('./src/seeds/seedData.js').seedData().then(() => process.exit(0)).catch(() => process.exit(1))\""
  },
  "dependencies": {
    "@types/multer": "^1.4.11",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.12.0",
    "bullmq": "^5.61.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "multer": "^1.4.4",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.10",
    "resend": "^6.1.2",
    "socket.io": "^4.7.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.3",
    "jest-environment-node": "^29.7.0",
    "jest-mock": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/seeds/**",
      "!src/server.js",
      "!src/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
