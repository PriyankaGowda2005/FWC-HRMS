{
  "name": "fwc-hrms",
  "version": "1.0.0",
  "description": "FWC HR Management System - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "test": "npm run test:backend",
    "test:backend": "cd apps/backend && npm test",
    "test:system": "node test-system.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "node setup.js",
    "setup:db": "cd apps/backend && node setup-database.js",
    "demo": "echo 'Starting FWC HRMS Demo...' && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  }
}
